<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:gravity="center"
    android:clickable="false"
    android:background="@drawable/backgroundtest">

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:id="@+id/forge_button"
        android:src="@drawable/anvil_icon"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="anvil" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classes"
        android:id="@+id/class_button"
        android:onClick="openCourseIndex"
        android:layout_gravity="center"
        android:textColor="#ff0000"
        android:layout_below="@id/forge_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availability"
        android:id="@+id/avail_button"
        android:layout_gravity="center"
        android:onClick="openAvailability"
        android:textColor="#ff0000"
        android:layout_below="@id/class_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
